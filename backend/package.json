{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/server.ts",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rimraf dist",
    "test": "jest --config jest.config.js",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPatterns=unit",
    "test:integration": "jest --testPathPatterns=integration",
    "test:e2e": "jest --config jest.config.js --testPathPatterns=e2e --detectOpenHandles",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --config jest.config.js --ci --coverage --watchAll=false",
    "lint": "tsc -p tsconfig.json --noEmit",
    "lint:monitoring": "tsc -p tsconfig.build.monitoring.json --noEmit",
    "lint:cache": "tsc -p tsconfig.build.cache.json --noEmit",
    "docker:build": "docker build -f docker/Dockerfile -t lms-backend .",
    "docker:run": "docker run -p 3000:3000 lms-backend",
    "docker:up": "docker-compose -f docker/docker-compose.yml up -d",
    "docker:down": "docker-compose -f docker/docker-compose.yml down",
    "docker:logs": "docker-compose -f docker/docker-compose.yml logs -f",
    "docker:dev": "docker-compose -f docker/docker-compose.dev.yml up -d",
    "reset-db": "ts-node -r tsconfig-paths/register src/scripts/reset-db.ts",
    "setup-db": "ts-node -r tsconfig-paths/register src/scripts/setup-db.ts",
    "setup-db-simple": "ts-node -r tsconfig-paths/register src/scripts/setup-db-simple.ts",
    "reset-db-simple": "ts-node -r tsconfig-paths/register src/scripts/reset-db-simple.ts",
    "migrate": "ts-node -r tsconfig-paths/register src/scripts/migrate.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/multer": "^2.0.0",
    "@types/nodemailer": "^7.0.2",
    "@types/qrcode": "^1.5.5",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "dotenv-flow": "^4.1.0",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.9",
    "pg": "^8.16.3",
    "qrcode": "^1.5.4",
    "redis": "^5.8.3",
    "sequelize": "^6.37.7",
    "socket.io": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^13.0.0",
    "winston": "^3.18.3",
    "zod": "^4.1.12",
    "zxcvbn": "^4.4.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.7.1",
    "@types/pg": "^8.15.5",
    "@types/sequelize": "^4.28.20",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@types/zxcvbn": "^4.4.5",
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  }
}
