# Test Environment Variables
NODE_ENV=test
PORT=3001

# Test Database (dedicated Postgres container running on localhost:6543)
DATABASE_URL=postgresql://lms_user:123456@127.0.0.1:6543/lms_db
DB_HOST=127.0.0.1
DB_PORT=6543
DB_NAME=lms_db
DB_NAME_TEST=lms_db
DB_USER=lms_user
DB_PASSWORD=123456
ALLOW_MAIN_DB_TESTS=false

# Test Redis
REDIS_URL=redis://localhost:6379/1

# JWT (Test)
JWT_SECRET=test-jwt-secret-key
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=24h
JWT_ISSUER=lms-backend-test
JWT_AUDIENCE=lms-frontend-test

# Frontend (Test)
FRONTEND_URL=http://localhost:3001

# Logging (Test)
LOG_LEVEL=error

# Disable cache for integration tests
DISABLE_CACHE=true

# Disable rate limiting and metrics for integration tests
DISABLE_RATE_LIMIT=true
DISABLE_METRICS=false

# CORS (Test)
CORS_ALLOWED_ORIGINS=http://localhost:3001,http://localhost:5174
CORS_ALLOWED_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With
CORS_ALLOW_CREDENTIALS=true
