{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "noResolve": true,
    
    "types": ["node"],
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ],
    "baseUrl": "./",
    "paths": {
      "@utils/*": ["src/utils/*"],
      "@config/*": ["src/config/*"],
      "@modules/*": ["src/modules/*"],
      "@types/*": ["src/types/*"],
      "@repositories/*": ["src/repositories/*"]
    }
  },
  "include": [
    "src/models/user.model.ts",
    "src/modules/user/user.repository.ts",
    "src/modules/user/user.service.ts",
    "src/types/shims-users.d.ts",
    "src/types/shims-user-service.d.ts",
    "src/types/shims-users-repo.d.ts",
    "src/config/db.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts"
  ]
}


