{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "types": ["node"],
    "baseUrl": "./",
    "paths": {
      "@utils/*": ["src/utils/*"],
      "@config/*": ["src/config/*"]
    }
  },
  "include": [
    "src/cache/strategies/**/*.ts",
    "src/cache/cache.manager.ts",
    "src/cache/cache.middleware.ts",
    "src/utils/logger.util.ts",
    "src/utils/date.util.ts",
    "src/config/redis.config.ts",
    "src/config/env.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts"
  ]
}


