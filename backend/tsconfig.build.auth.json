{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "noResolve": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": [
    "src/modules/auth/**/*.ts",
    "src/types/shims-auth.d.ts",
    "src/types/shims-global.d.ts",
    "src/config/db.d.ts"
  ],
  "exclude": [
    "src/modules/auth/**/*.test.ts",
    "src/modules/auth/**/*.spec.ts"
  ]
}
